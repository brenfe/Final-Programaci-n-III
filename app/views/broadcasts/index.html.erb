<p id="notice"><%= notice %></p>

<h1>Broadcasts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Program number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @broadcasts.each do |broadcast| %>
      <tr>
        <td><%= broadcast.date %></td>
        <td><%= broadcast.program_number %></td>
        <td><%= link_to 'Show', broadcast %></td>
        <td><%= link_to 'Edit', edit_broadcast_path(broadcast) %></td>
        <td><%= link_to 'Destroy', broadcast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Broadcast', new_broadcast_path, class: "btn btn-primary", style: "color:white" %>
