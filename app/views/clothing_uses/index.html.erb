<p id="notice"><%= notice %></p>

<h1>Clothing Uses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Program Number</th>
      <th>Garment Description</th>
      <th>Host</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothing_uses.each do |clothing_use| %>
      <tr>
        <td><%= clothing_use.broadcast.program_number %></td>
        <td><%= clothing_use.garment.description %></td>
        <td><%= clothing_use.host.full_name %></td>
        <td><%#= clothing_use.brand.name %></td>
        <td><%#= clothing_use.garment_type.name %></td>
        <td><%= link_to 'Show', clothing_use %></td>
        <td><%= link_to 'Edit', edit_clothing_use_path(clothing_use) %></td>
        <td><%= link_to 'Destroy', clothing_use, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clothing Use', new_clothing_use_path, class: "btn btn-primary", style: "color:white" %>
